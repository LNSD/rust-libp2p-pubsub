{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:base"],
  schedule: [
    "At 8:00 AM"
  ],
  timezone: "Europe/Madrid",
  rebaseStalePrs: true,
  lockFileMaintenance: {
    enabled: true,
    automerge: true
  },
  packageRules: [
    {
      matchUpdateTypes: [
        "minor",
        "patch"
      ],
      matchCurrentVersion: "!/^0/",
      automerge: true
    }
  ]
}
